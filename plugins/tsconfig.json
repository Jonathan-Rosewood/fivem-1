{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        },
        "outDir": "./",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "lib": ["es2017"],
        "types": ["@citizenfx/client", "@citizenfx/server", "@types/node"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["./**/*", "../src/interfaces.d.ts"],
    "exclude": ["**/node_modules", "**/__tests__/*"]
}
