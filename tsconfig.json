{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"],
            "@server/*": ["src/server/*"],
            "@client/*": ["src/client/*"],
            "@plugins/*": ["plugins/*"],
            "@/*": ["./*"],
        },
        "outDir": "./dist/types",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "lib": ["es2017"],
        "types": [
            "@citizenfx/client",
            "@citizenfx/server",
            "@types/node",
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": false,
        "emitDeclarationOnly": false,
        "alwaysStrict": true
    },
    "include": [
        "./src/**/*",
        "./plugins/**/*",
    ],
    "exclude": [
        "**/node_modules",
        "**/__tests__/*",
    ],
}
